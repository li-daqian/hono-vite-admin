{
  "name": "@hono-vite-admin/server",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "test": "bun test --coverage",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "check-types": "tsc --noEmit",
    "prisma:reset": "prisma generate && prisma migrate reset && prisma db push && prisma db seed"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "hono": "^4.10.6",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@hono-vite-admin/eslint-config": "workspace:*",
    "@hono-vite-admin/typescript-config": "workspace:*",
    "@hono/swagger-ui": "^0.5.2",
    "@types/bun": "latest",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "pino-pretty": "^13.1.2",
    "prisma": "^7.2.0"
  }
}
